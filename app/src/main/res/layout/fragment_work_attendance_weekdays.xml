<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/card_monday"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/weekday_capital_letter_shape"
                android:gravity="center"
                android:text="M"
                android:textAlignment="center"
                android:textColor="@color/app_theme_color"
                android:textSize="36sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday"
                android:fontFamily="@font/mons_semibold"
                android:textAlignment="center"
                android:layout_marginStart="25dp"
                android:textColor="@color/app_theme_color"
                android:textSize="24sp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/card_tuesday"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
    app:layout_constraintTop_toBottomOf="@id/card_monday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/weekday_capital_letter_shape"
                android:gravity="center"
                android:text="T"
                android:textAlignment="center"
                android:textColor="@color/app_theme_color"
                android:textSize="36sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuesday"
                android:fontFamily="@font/mons_semibold"
                android:textAlignment="center"
                android:layout_marginStart="25dp"
                android:textColor="@color/app_theme_color"
                android:textSize="24sp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/card_wednesday"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/card_tuesday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/weekday_capital_letter_shape"
                android:gravity="center"
                android:text="W"
                android:textAlignment="center"
                android:textColor="@color/app_theme_color"
                android:textSize="36sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wednesday"
                android:fontFamily="@font/mons_semibold"
                android:textAlignment="center"
                android:layout_marginStart="25dp"
                android:textColor="@color/app_theme_color"
                android:textSize="24sp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/card_thursday"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/card_wednesday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/weekday_capital_letter_shape"
                android:gravity="center"
                android:text="T"
                android:textAlignment="center"
                android:textColor="@color/app_theme_color"
                android:textSize="36sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thursday"
                android:fontFamily="@font/mons_semibold"
                android:textAlignment="center"
                android:layout_marginStart="25dp"
                android:textColor="@color/app_theme_color"
                android:textSize="24sp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/card_friday"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/card_thursday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/weekday_capital_letter_shape"
                android:gravity="center"
                android:text="F"
                android:textAlignment="center"
                android:textColor="@color/app_theme_color"
                android:textSize="36sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friday"
                android:fontFamily="@font/mons_semibold"
                android:textAlignment="center"
                android:layout_marginStart="25dp"
                android:textColor="@color/app_theme_color"
                android:textSize="24sp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
